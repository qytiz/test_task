%h1 Список пользователей

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Имя
      %th Email
      %th Возраст
      %th Пол
      %th Действия
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.name
        %td= user.email
        %td= user.age
        %td= user.gender == 'male' ? 'Мужской' : 'Женский'
        %td
          = link_to 'Показать', user_path(user), class: 'btn btn-info btn-sm'
          = link_to 'Удалить', user_path(user),
          method: :delete, data: { confirm: 'Вы уверены?' },
          class: 'btn btn-danger btn-sm'

%br
= link_to 'Создать нового пользователя', new_user_path, class: 'btn btn-primary'
